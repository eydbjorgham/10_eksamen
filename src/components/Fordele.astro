---
import "../styles/styles.css";
---

<section class="wave-wrapper">
  <div class="fordele-indhold">
    <div class="fordele-kolonne">
      <img src="/imgs/lumifilterfordele.webp" alt="LUMI Pure vandfilter" />
      <ul class="fordele-liste">
        <li>Reducerer Pesticider</li>
        <li>Mindre kalk</li>
        <li>Ren og frisk smag</li>
        <li>Færre tungmetaller</li>
        <li>Beskytter mod bakterier</li>
      </ul>
    </div>
    <div class="ulemper-kolonne">
      <img src="/imgs/vandhanecons.webp" alt="Almindelig vandhane" />
      <ul class="ulemper-liste">
        <li>50% indeholder usynlige rester</li>
        <li>Hårdt vand kan skade nyrer</li>
        <li>Kan have bismag</li>
        <li>Kan indeholde bly og kviksølv</li>
        <li>Kan indeholde mikroorganismer</li>
      </ul>
    </div>
  </div>
</section>

<style>
  .wave-wrapper {
    position: relative;
    width: 100%;
    height: auto;
    padding: 10em 2em;
    overflow: hidden; /* Skjuler indhold uden for boksen */
    z-index: 0; /* Lægger bag alt andet */
  }

  .wave-wrapper::before {
    content: ""; /* Tilføjer bølgegrafik */
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 100%;
    background-image: url("./imgs/wave.svg");
    background-size: auto 100%;
    background-position: center;
    background-repeat: repeat-x;
    animation: waveScroll 20s linear infinite; /* Bølgens bevægelse */
  }

  @keyframes waveScroll {
    from {
      background-position-x: 0;
    }
    to {
      background-position-x: -100%; /* Ruller bølgen til venstre */
    }
  }

  .fordele-indhold {
    display: grid;
    grid-template-rows: 1fr;
    position: relative;
    z-index: 1; /* Ligger over bølgen */
    align-items: center;
    text-align: left;
    gap: 4em; /* Mellemrum mellem kolonner */
  }

  .fordele-kolonne,
  .ulemper-kolonne {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2em;
  }

  .fordele-kolonne img,
  .ulemper-kolonne img {
    max-width: 250px;
    border-radius: 12px; /* Runde hjørner */
    width: 50%;
  }

  .fordele-liste li,
  .ulemper-liste li {
    font-size: 0.9em;
    margin-bottom: 0.8em;
    list-style: none; /* Fjerner punkttegn */
    display: flex;
    align-items: center;
    color: #003f5b;
  }

  .fordele-liste li::before {
    content: "✅"; /* Grøn tjek */
    margin-right: 0.5em;
    color: #19a75f;
  }

  .ulemper-liste li::before {
    content: "✖️"; /* Rød kryds */
    margin-right: 0.5em;
    color: #cc0000;
  }

  @media (min-width: 769px) {
    .wave-wrapper {
      padding: 8em 2em;
    }

    .fordele-indhold {
      display: grid;
      grid-template-columns: 1fr 1fr; /* 2 kolonner på større skærm */
    }

    .fordele-liste li,
    .ulemper-liste li {
      font-size: 1.1em;
    }

    .fordele-kolonne img,
    .ulemper-kolonne img {
      max-width: 250px;
      border-radius: 12px;
    }

    .fordele-kolonne {
      margin-left: 15em;
    }

    .ulemper-kolonne {
      margin-right: 15em;
    }
  }
</style>
