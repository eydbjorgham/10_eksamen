<style>
  .wave-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 5em;
  }

  .wave-wrapper::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 100%;
    background-image: url("/imgs/wave.svg");
    background-size: auto 100%;
    background-position: center;
    background-repeat: repeat-x;
    animation: waveScroll 15s ease-in-out infinite;
    z-index: 0; /* Bag indholdet */
  }

  @keyframes waveScroll {
    from {
      background-position-x: 0;
    }
    to {
      background-position-x: -100%;
    }
  }

  .wave-wrapper section {
    position: relative;
    z-index: 1; /* Indhold ligger ovenpå bølgen */
    display: grid;
    grid-template-rows: 1fr;
    padding: 5em 4em 4em 4em;
    max-width: 1400px;
    margin: 0 auto;
  }

  .forste-hvorfor {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  .forste-hvorfor img {
    width: 80%;
    border-radius: 15px;
  }

  .forste-hvorfor p {
    line-height: 1.7;
    font-size: 0.9em;
  }

  .tekst2 {
    order: 2;
  }

  .billede2 {
    order: 1;
  }

  @media (min-width: 769px) {
    section {
      display: grid;
      grid-template-rows: 1fr;
      margin: 5em 4em 0 4em; /* Beholder din indholdsmargin */
    }

    .forste-hvorfor {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1em;
    }

    .forste-hvorfor p {
      margin-top: 5em;
      font-size: 1em;
    }

    .tekst1,
    .billede1,
    .tekst2,
    .billede2 {
      order: initial;
    }
  }
</style>
